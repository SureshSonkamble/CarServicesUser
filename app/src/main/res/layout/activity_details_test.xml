<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <include layout="@layout/toolbar_home"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College Details"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/rent"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Name       : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/rent"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Email       : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/deposit"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Course Details  : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/txt_course_detail"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/idea"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Duration  : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/price"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Fees  : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/txt_fees"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/idea"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Eligibility  : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/txt_eligibility"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/telephone"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Mobile    : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="05dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/address"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Address : "
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                />


            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ssss"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_website"
            android:layout_width="wrap_content"
            android:drawableLeft="@drawable/browser"
            android:layout_height="65dp"
            android:text="Visit Website"
            android:background="#ffffff"
            android:textColor="@color/colorPrimaryDark"
           />


    </LinearLayout>
        <View
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>