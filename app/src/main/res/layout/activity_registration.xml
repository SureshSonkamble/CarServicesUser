<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bgg">
<include layout="@layout/toolbar_basic"/>

<LinearLayout
    android:layout_marginTop="100dp"
    android:id="@+id/input_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:gravity="center">
    <ImageView
        android:layout_marginTop="05dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:fontFamily="sans-serif"
        android:src="@drawable/car"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/edt_stud_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_top"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="15dp" />

    <EditText
        android:id="@+id/edt_stud_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp" />

    <EditText
        android:id="@+id/edt_stud_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"/>
    <EditText
        android:id="@+id/edt_stud_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_middle"
        android:hint="Mobile"
        android:inputType="number"
        android:padding="15dp"/>
    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bottom"
        android:padding="15dp"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/edit_text_middle"
            android:id="@+id/txt_date"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:selectAllOnFocus="true"
            android:textStyle="bold"
            android:hint="01/01/1990" />
        <ImageView
            android:id="@+id/img_date"
            android:src="@drawable/calendar"
            android:layout_width="50dp"
            android:layout_height="35dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_stud_registrtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="SIGN UP"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/signIn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        android:text="Already Have an Account?  Sign in"
        android:textAllCaps="true"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif"/>

</LinearLayout>
</RelativeLayout>